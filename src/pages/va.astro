---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Services</div>
  </div>

  <HorizontalCard
    title="Visual novel development"
    img="/yabaichat.webp"
    desc="Whether simple or complex, I can help you make your ideal visual novel that can be ported to most platforms."
    url="visualnovel"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="3D character modelling"
    img="/3dmodel.jpg"
    desc="I specialize in anime style models. I offer full 3D models with rigging and animations."
    url="3d"
  />
</BaseLayout>
